<h1>UsersList</h1>
<section class="row justify-content-center py-3">
    <div class="col-6 text-left p-0">
        <form action="/v1/users/statistic" method="get">
            <button type="submit" class="btn btn-primary">
                Get statistic for 30 days
            </button>
        </form>
    </div>
    <div class="col-6 text-right p-0">
        <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#staticBackdrop"
            >
            Add user
        </button>
    </div>
   

    <%- include("./createUserForm.ejs") %> <%- include("./changeUser.ejs") %>
</section>
<section class="row justify-content-center">
    <table class="table table-hover ">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">email</th>
                <th scope="col"></th>
                <th scope="col">full name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody id="userTBody">
            <% users.forEach(function(user, i){ %>
            <tr>
                <th scope="row"><%=i + 1%></th>
                <td id="user-email"><%=user.email %></td>
                <td>
                    <label
                        class="btn btn-sm btn-outline-info"
                        data-toggle="modal"
                        data-target="#staticBackdrop-1"
                    >
                        <input
                            class="visually-hidden"
                            type="radio"
                            form="updateUserForm"
                            name="id"
                            value="<%=user.id %>"
                        />
                        update
                    </label>
                </td>
                <td><%=user.fullName %></td>
                <td>
                    <label
                        class="btn btn-sm btn-outline-danger"
                        data-toggle="modal"
                        data-target="#deleteUserModal"
                    >
                        <input
                            class="visually-hidden"
                            type="radio"
                            form="deleteUserForm"
                            name="id"
                            value="<%=user.id %>"
                        />
                        delete
                    </label>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</section>
</div>
